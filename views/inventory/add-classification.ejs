<!-- HTML, title implementation using title value from controller -->
<% if (title) { %>
  <h1 id="managementTitle"><%= title %></h1>
  <% } else { res.redirect('/') } %>
  
  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  
  <form id="addClassification" action="add-classification" method="post">
  <div>FIELD IS REQUIRED</div>
    <fieldset> 
  <div>
    <label for="">Classification Name</label><br>
    <p>
     NAME MUST BE ALPHABET CHARACTERS ONLY, WITH A RANGE OF 1-9 CHARACTERS.
    </p>
    <input type="text" id="classification_name" name="classification_name" title="1-9 characters, no spaces, and letters only." required pattern="^[a-zA-Z]{1,9}$" value="<%= locals.classification_name %>">
  </div>
  <button id="clasificationButton" type="submit" value="Add Classification">Add Classification<br>
</fieldset>
</form>
