<!-- HTML, title implementation using title value from controller -->
<% if (title) { %>
  <h1 id="managementTitle"><%= title %></h1>
  <% } else { res.redirect('/') } %>
  

  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  
  <form id="deleteReviewForm" action="/account" method="post">
    <p>CONFIRM CORRECT ITEM! DELETION CANNOT BE UNDONE.</p>
    <fieldset>
      <div class="divider">
        <label for="review_date">Review Date</label><br>
        <input type="text" id="review_date" class="string" name="review_date" title="" value="<%= locals.review_date %>" disabled>
      </div>
      <div class="divider">
        <label for="review_text">Review Text</label><br>
        <textarea id="review_text" name="review_text" rows="4" cols="50" value="" disabled><%= locals.vehicle_data.review_text %></textarea><br>
      </div>
      <button id="deleteReview_button" type="submit">Delete<br/>
      <input type="hidden" name="review_id" <% if(locals.vehicle_data.review_id) { %> value="<%= locals.vehicle_data.review_id %>" <% } %>>
      </fieldset>
</form>

